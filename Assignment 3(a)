#include <stdio.h>
int main()
{
  char name[25];
  double mark1;
  double mark2;
  double sum;
  double av;
  printf("Enter your Name:\n",name);
  scanf("%s",&name);
  printf("Maths Mark :\n",mark1);
  scanf("%lf",&mark1);
  printf("Chemistry Mark:\n",mark2);
  scanf("%lf",&mark2);
  sum= mark1 + mark2;
  printf("The sum is %f\n",sum);
  av=sum/2;
  /* to calculate average*/
  printf("The average is %f\n",av);
  
  return 0;
}
